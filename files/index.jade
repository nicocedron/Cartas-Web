extends template


block content
	.header
		.left
			.logo C
			.back.icon-arrow-left
		.right
			.icon.icon-th-menu

			.menu
				.item 
					a Descubre
				.item
					a Comparte
				.item
					a Colecciona
				.separator

				.item2
					a Comentarios sobre la aplicacion
				.item2
					a Logout

		ul.nav
			li#descubre.active Descubre
			li#comparte Comparte
			li#coleciona Colecciona

	.subheader
		.descubre.active
			.filter 
				span Filtros
				ul
					li Rating
					li Distancia
					li Precio
					li Disponible			

			input.search(placeholder="Buscar cartas de actividad")
			.search.icon-filter

		.comparte
			input.search(placeholder="Buscar conversaciones de planes")
		.colecciona
			input.search(placeholder="Buscar cartas en tus colecciones")

		.Invite
			.subtitle
				|Invitados

			.floatR.right
				.btn.green.js-edit Editar

			.listInvite
				ul.clearfix
					li Juan Carlos B.
					li Carlos Campos
					li +1

			input.search(placeholder="Buscar amigos para invitar")

	+pageContent
		+page
			.filterPage
				include filters

			.cards#comparteList
				each val in card
					.card(class!="cat_#{val.category}")
						.image(style!="background-image: url(#{val.image})")
						.title #{val.title}
							b En #{val.from}
						.share Invitar
						.tag #{val.tag}
						.address #{val.address}

			.cardExpanded
				include cardExpanded

			.cardInvite
				ul.selectInvit
					li
						label
							.box-img
								img(src='https://fbcdn-profile-a.akamaihd.net/hprofile-ak-prn1/t5/s48x48/50497_286090116575_1262794_q.jpg')
							span.name Juliana Lizarra
							input(type='checkbox')
					li
						label
							.box-img
								img(src='https://fbcdn-profile-a.akamaihd.net/hprofile-ak-ash2/s48x48/1087018_160705070753108_939350680_q.jpg')
							span.name Jeniffer Madison
							input(type='checkbox')
					li
						label
							.box-img
								img(src='http://pbs.twimg.com/profile_images/1795303807/spinetta-784314_normal.jpg')
							span.name Daniel Guerra
							input(type='checkbox')
					li
						label
							.box-img
								img(src='https://fbcdn-profile-a.akamaihd.net/hprofile-ak-ash2/t5/s48x48/1086603_604037769674221_805703514_q.jpg')
							span.name Bratt Pitt
							input(type='checkbox')

				
		+page
			.newPlan
				a(href="chat.html") Iniciar nuevo plan
			ul.chat
				include chatPage


		+page
			.cards
				each val in card
					.card(class!="cat_#{val.category}")
						.image(style!="background-image: url(#{val.image})")
						.title #{val.title}
							b En #{val.from}
						.share Invitar
						.tag #{val.tag}
						.address #{val.address}
		
	.footer
		.Invite
			.btn.js-search Buscar mas amigos
			.btn.blue.js-invite Invitar

		.Card
			.btn.blue.js-invite Invitar

	script
		$(document).on('ready',home);