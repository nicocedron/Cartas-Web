extends template


block content
	.header
		.left
			.logo C
			.back.icon-arrow-left
		.right
			.icon.icon-th-menu

			.menu
				.item 
					a Descubre
				.item
					a Comparte
				.item
					a Colecciona
				.separator

				.item2
					a Comentarios sobre la aplicacion
				.item2
					a Logout

		ul.nav
			li#descubre.active Descubre
			li#comparte Comparte
			li#coleciona Colecciona

	.subheader
		.descubre.active
			.filter 
				span Filtros
				ul
					li Rating
					li Distancia
					li Precio
					li Disponible			
			input.search(placeholder="Buscar cartas de actividad")
			.search.icon-filter

		.comparte
			input.search(placeholder="Buscar conversaciones de planes")
		.colecciona
			input.search(placeholder="Buscar cartas en tus colecciones")

	+pageContent
		+page
			.filterPage
				include filters

			.cards#comparteList
				each val in card
					.card(class!="cat_#{val.category}")
						.image(style!="background-image: url(#{val.image})")
						.title #{val.title}
							b En #{val.from}
						.share Invitar
						.tag #{val.tag}
						.address #{val.address}

			.cardExpanded
				.image
					img(src="http://recetasdecocinablog.com/wp-content/uploads/2011/02/comida_de_restaurante_chino2.jpg")
				h2 Lorem Ipsum <b>En Lorem Ipsum</b>

				.extra		
					.left
						.category
							.cat
							|Bebidas y Comidas
					.right
						.btn Colecciona Carta

				.description
					p Es la perfecta caracteres de la de decoración casual con comida de alta calidad, un toque de audacia gastronómica a muy buen precio.
				.tags
					ul
						li Francesa
						li Americana
						li Gourmet

				.separator

				.price
					|Precio promedio
					.right
						.number
							$30
						.txt mil por<br/> persona
