mixin pageContent()
	.swiper-pages.swiper-container
		.swiper-wrapper
				if block
					block
mixin page()
	.swiper-slide
		.swiper-container.scroll-container
			.swiper-scrollbar
			.swiper-wrapper
				.swiper-slide
					if block
						block

doctype html
html(lang="es")
	head
		meta(charset="utf-8")
		meta(content="IE=edge,chrome=1",http-equiv="X-UA-Compatible")
		meta(name="viewport",content="width=device-width")
		title Cartas Web | Mobile
		
		link(href='http://fonts.googleapis.com/css?family=Lato:300,400|Raleway:400,300,200,600',rel='stylesheet',type='text/css')
		link(href='css/all.css',rel='stylesheet',type='text/css')
			
		script(src="js/jquery.js")
		script(src="js/swiper/idangerous.swiper-2.0.min.js")
		script(src="js/swiper/idangerous.swiper.scrollbar-2.0.js")
		script(src="js/all.js")

	body
		+pageContent()
			block content