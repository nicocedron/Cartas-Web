/* Import nib*/
@import "nib"

/* Import fuentes */
@import "fonts"

/* Import icons */
@import "icons"

/* Import colores */
@import "colors"

/* Reset */
h1,h2,h3,h4,h5,h6,p,ul,li
    margin 0
    padding 0

/* Border left */
.border-left
    border-left 1px solid $blanco

/* Uso de extend como clase global */
.style-inline
    display inline-block
    vertical-align middle

/* Li seleccionado */
.is-selected
    background $B3
    color #fff 
    border-none

/* Linea */
.linea
    width 1px
    background #bababa
    height 100%
    @extend .style-inline
    vertical-align top

/* Contenedor */
section#container
    margin 0 auto
    width 100%
    max-width 1400px

html,body
    height 100%
    
body
    font-size 62.5%
    font-family $open

/* Start module header */
header
    padding 25px 0

    section#container
        h1
            width 19%
            @extend .style-inline

            img
                width 100%
                display block 
        nav
            width 80%
            @extend .style-inline
            text-align right

            ul
                list-style none

                li
                    @extend .style-inline

                    &:last-child
                        a
                            padding 5px 0
                    a
                        text-decoration none
                        color $negro
                        font-size 1.3em
                        font-family "raleway"
                        font-weight 400
                        padding: 5px 10px

                    .box-search
                        border 1px solid #666
                        width 100%

                        input
                            display inline-block
                            padding 4px
                            border none
                            font-size 1.4em
                            outline 0
                            vertical-align middle

                        input[type="submit"]
                            width 25px
                            border-left 1px solid #666
                            font-family "icomoon"
                            background $blanco

/* End module header */

/* Start module section#content */
section#content
    text-align center
    position relative

    /* Start module .order */
    .order
        text-align left
        margin 15px 0

        ul
            list-style none

            li
                @extend .style-inline
                color $negro
                font-size 1.3em
                font-family "raleway"
                font-weight 400

                a
                    text-decoration none
                    padding 5px 10px
                    color $negro
                    background $gris-claro

    /* End module .order */

    /* Start module .wrapper (Card) */

    .wrapper
        background $gris-claro
        cursor pointer
        margin 1% 0.3%
        min-width 190px
        vertical-align top
        width 19%
        @extend .style-inline

        .box-image
            overflow hidden
            width 100%

            img
                display block
                height 150px
                width 100%

        .border
            height 5px
            background $cat-1

        .box-footer
            font-family $roboto
            text-align left
            padding 2%

            h2
                font-size 1.4em
                font-weight 200
                height 38px
                
                strong
                    font-weight 400
            
            h3
                font-size 1.1em
                font-weight 200

    .wrapper-expanded
        border 3px solid $gris-oscuro
        display block
        padding 15px 55px
        position relative
        margin 20px 0

        &:before
            width 0
            height 0
            position absolute
            content ""
            border-left 20px solid transparent
            border-right 20px solid transparent
            border-bottom 20px solid $gris-oscuro
            top -22px
            left 28%
        
        a.exit
            display block
            position absolute
            top 5px
            right 5px
            background $gris-claro
            font-size 3em
            color $gris-oscuro
            text-decoration none
            padding 5px 15px

        .box1,.box2,.box3
            vertical-align top
            width 24%
            font-family $roboto
            margin 0 10px
            @extend .style-inline

            ul
                list-style none

                li
                    a 
                        text-decoration none

        .box1
            width 44%

            .box-image
                position relative
                max-width 192px
                width 36%
                @extend .style-inline
                vertical-align top

                img
                    width 100%
                    display block 
                    height 250px

                ul
                    position absolute
                    left 50%
                    margin-left -50px
                    bottom 8px

                    li
                        @extend .style-inline
                        margin 0 5px 

                        a
                            width 25px
                            height 25px
                            background $cat-6
                            border-radius 25px
                            display block

            .description
                @extend .style-inline
                vertical-align top
                width 62%
                text-align left
                padding-left 2%

                h2
                    font-size 1.6em
                    font-weight 300
                    margin-bottom 15px

                    strong
                        font-weight 400

                h3
                    font-size 1.4em
                    font-weight 200
                    margin 12px 0

                h5
                    font-size 1.2em
                    font-weight 200

                h4
                    font-size 1.4em
                    font-weight 200
                    margin 10px 0

                    &:before
                        content "\66"
                        font-family "icomoon"
                        margin-right 8px
                        font-size 2em
                        vertical-align middle
                        color #197db6

        .box2
            clear both

            a
                text-decoration none
                font-size 1.6em
                padding 5px 10px
                color #000
                background #e5e5e5
                float right
                display block
                font-family $rale

            ul
                margin-top 45px

                li
                    border-bottom 2px solid $gris-oscuro
                    margin-bottom 10px
                    font-size 1.4em
                    font-weight 200

                    span,input
                        display inline-block
                        margin 0
                        padding 0

                    span
                        text-align left
                        width 83%

                     input
                         text-align right
                         width 15%

        .box3
            ul.header-chat
                background $gris-claro
                text-align left
                padding 5px 0

                li
                    background $gris-oscuro
                    display inline-block
                    margin 0 3px

                    a
                        text-decoration none
                        font-size 1.4em
                        padding 5px 10px
                        color #000
                        font-weight 200

            h2
                display block
                background #fff
                color #000
                padding 5px 0
                font-weight 200
                text-align left

            ul.content-chat
                li
                    border-bottom 1px solid #f1f1f1
                    margin 1px 0
                    padding 2px 0

                    >div
                        width 15%
                        @extend .style-inline
                        vertical-align top

                        img
                            display block
                            width 100%
                            height 40px
                    
                    .msj
                        width 62%
                        text-align left
                        margin-left 5px

                        span:first-child
                            font-size 1.3em
                            font-weight 400
                            display block

                        span:last-child
                            font-size 1.2em
                            font-weight 200
                            display block

                    .hour
                        padding 3px 4px

                    &:last-child
                        border-bottom 0


            a.invitar
                text-decoration none
                font-size 1.6em
                padding 10px
                color #000
                background $B1
                display block
                font-family $rale
                

    /* End module .wrapper (Card) */

/* End module section#content */

/* Start module section.box-content*/

.box-content
    border 1px solid #bababa
    margin 20px 0
    overflow hidden
    font-family 'Raleway',sans-serif


    .column
        @extend .style-inline 
        width 35%
        vertical-align top

        &:first-child
            width 20%
            
        &:nth-child(3)
            width 43%

    .colOne
        ul
            list-style none

            li.title
                text-align center
                background #6dbe45
                padding 0
                
                a
                    text-decoration: none
                    font-size 1.6em
                    padding 10px
                    color #fff
                    display block
                    font-family: 'Raleway',sans-serif

                    &:after
                        content "\e601"
                        font-family "icomoon"
                        margin-left 5px
                        font-size 1.5em
                        vertical-align middle
                        color $gris-claro

            li.iniciar
                background $gris-claro
                padding 0
                text-align center

                a
                    text-decoration none
                    font-size 1.4em
                    padding 10px
                    color #000
                    display block
                    font-family 'Raleway',sans-serif

                    &:after
                        content "\e605"
                        font-family "icomoon"
                        margin-left 5px
                        font-size 1.5em
                        vertical-align middle
                        color #444

            li
                position relative
                padding 7px 5px
                border-bottom 1px solid #bababa
                border-right 1px solid #bababa

                .img-left
                    float left
                    width 52%
                    overflow hidden

                    .box-image
                        float left
                        margin-left 2px
                        width 30px
                        height 30px
                        @extend .style-inline

                        img
                            width 100%
                            display inline-block
                
                h4
                    float left
                    width 48%
                    font-style italic
                    text-align right
                    font-family $roboto
                    font-weight 200
                    font-size 1.1em

                h2
                    font-size 1.4em
                    font-family $roboto
                    font-weight 400
                    color #2A2A2A

    .colTwo
        font-family $roboto
        border-right 1px solid #bababa
        padding 1% 0 0 1%
        padding-bottom 50px

        h4
            font-size 1.4em
            font-weight 200            

        h1
            font-size 2.2em
            margin 2.5px 0 10px
            font-weight 400
            color #353535     

        ul
            list-style none

            li
                margin 10px 0

                h3.person
                    font-size 1.4em
                    font-weight 500
                    color #2C2C2D

                h4
                    font-size 1.3em
                    font-weight 200 

                h5
                    text-align center
                    font-size 1.3em
                    font-weight 400
                    font-style italic

                .box-carta
                    position relative
                    margin 7.5px 0 

                    .image
                        width 200px
                        height 90px
                        position absolute
                        left 0
                        top 0
                        bottom 0

                        img
                            display block
                            width 100%
                            height 90px

                    .content
                        padding-left 207px
                        background $gris-claro
                        height 90px

                        h2
                            font-size 1.2em
                            font-weight 200
                            padding 10px 0px 5px

                        h3
                            font-size 1em
                            font-weight 200
                            margin 3px 0
            .acuerdo
                span.icono
                    font-size 3em
                    color #666
                    @extend .style-inline
                    margin-right 7px

                span.textoAcuerdo
                    font-size 1.3em
                    font-weight 200
                    font-style italic
                    @extend .style-inline


    .colThree
        position relative

        >ul 
            list-style none
            position absolute
            top 5px
            right 0

            li
                display block
                margin 5px 0

                a                  
                    display block
                    text-decoration none
                    background $B2
                    padding 10px 
                    color #fff
                    font-size 1.2em

                &:first-child
                    a:before
                        content "\e601"
                        font-family "icomoon"
                        margin-right 5px
                        font-size 1.5em
                        vertical-align middle
                        color $gris-claro                    

                &:last-child
                    a:before
                        content "\e603"
                        font-family "icomoon"
                        margin-right 5px
                        font-size 1.5em
                        vertical-align middle
                        color $gris-claro

        .wrapper-new
            border 3px solid #bababa
            display block
            padding 9px
            position relative
            margin 20px 10px

            &:after
                width 0
                height 0
                position: absolute
                content ""
                border-top 10px solid transparent
                border-right 10px solid #bababa
                border-bottom 10px solid transparent
                top 20px
                left -12px
            
            &.marginNew
                margin 103px 10px 20px

            a.exit
                display block
                position absolute
                top 5px
                right 5px
                background $gris-claro
                font-size 2.5em
                color $gris-oscuro
                text-decoration none
                padding 5px 15px

            .description
                font-family $roboto
                width 56%
                @extend .style-inline

                h2
                    font-size 1.7em
                    font-weight 300
                    margin-bottom 7px
                    line-height 1.3em
                h5
                    font-size 1.2em
                    font-weight 200
                h3
                    font-size 1.4em
                    font-weight 200
                    margin 10px 0

                .options
                    ul
                        list-style none
                        margin 8px 0
                        
                        li
                            width 15px
                            height 15px
                            margin 0 4px
                            border-radius 10px
                            background #444
                            @extend .style-inline

                h4
                    font-size 1.4em
                    font-weight 200

                    &:before
                        content: "\66";
                        font-family: "icomoon";
                        margin-right: 8px;
                        font-size: 2em;
                        vertical-align: middle;
                        color: #197db6;
            .add
                width 43%
                @extend .style-inline

                a
                    text-decoration: none;
                    font-size: 1.4em;
                    padding: 5px 10px;
                    color: #000;
                    background: #e5e5e5;
                    display: block;
                    font-family: 'Raleway',sans-serif;
                    margin-top 40px

                ul
                    margin-top 25px
                    list-style none

                    li
                        border-bottom 2px solid #bababa
                        margin-bottom 10px
                        font-size 1.3em
                        font-weight 200

                        span
                            text-align left
                            width 82%
                            @extend .style-inline

                        input
                            text-align right
                            width 15%
    
                            @extend .style-inline
    .content-foo
        float right
        width 80%
        padding-top 24px
        border-top 1px solid #bababa
        margin-top -1px

        .box-textarea
            width 44%
            float left
            position relative

            textarea
                width 94%
                display block
                border none
                border 1px solid #bababa
                height 100px
                padding 5px 22px 5px 5px
                border none
                font-size 1.4em
                border 1px solid #bababa

            &:before
                position absolute
                top 1px
                right 0
                content "\e606"
                font-family 'icomoon'
                font-size 2em
                color #444
                background $gris-claro
                border-left 1px solid #bababa
                border-bottom 1px solid #bababa


        .box-icons
            float left
            width 56%
            text-align center

            ul
                list-style none
                padding 0 80px

                li
                    text-align center
                    background #DEDEDE
                    width 80px
                    height 70px
                    margin 5px
                    @extend .style-inline



/* End module section.box-content*/