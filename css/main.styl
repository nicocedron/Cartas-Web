/* Import nib*/
@import "nib"

/* Import fuentes */
@import "fonts"

/* Import icons */
@import "icons"

/* Import colores */
@import "colors"

/* Reset */
h1,h2,h3,h4,h5,h6,p,ul,li
    margin 0
    padding 0

/* Border left */
.border-left
    border-left 1px solid $blanco

/* Uso de extend como clase global */
.style-inline
    display inline-block
    vertical-align middle

/* Contenedor */
section#container
    margin 0 auto
    width 100%
    max-width 1400px

html,body
    height 100%
    
body
    font-size 62.5%
    font-family $open

/* Start module header */
header
    padding 25px 0

    section#container
        h1
            width 19%
            @extend .style-inline

            img
                width 100%
                display block 
        nav
            width 80%
            @extend .style-inline
            text-align right

            ul
                list-style none

                li
                    @extend .style-inline

                    &:last-child
                        a
                            padding 5px 0
                    a
                        text-decoration none
                        color $negro
                        font-size 1.3em
                        font-family "raleway"
                        font-weight 400
                        padding: 5px 10px

                    .box-search
                        border 1px solid #666
                        width 100%

                        input
                            display inline-block
                            padding 4px
                            border none
                            font-size 1.4em
                            outline 0
                            vertical-align middle

                        input[type="submit"]
                            width 25px
                            border-left 1px solid #666
                            font-family "icomoon"
                            background $blanco

/* End module header */

/* Start module section#content */
section#content
    text-align center
    position relative

    /* Start module .order */
    .order
        text-align left
        margin 15px 0

        ul
            list-style none

            li
                @extend .style-inline
                color $negro
                font-size 1.3em
                font-family "raleway"
                font-weight 400

                a
                    text-decoration: none
                    padding 5px 10px
                    color $negro
                    background $gris-claro

    /* End module .order */

    /* Start module .wrapper (Card) */

    .wrapper
        background $gris-claro
        margin 1% 0.3%
        vertical-align top
        width 19%
        min-width 190px
        transition top 0.5s, left 0.5s
        @extend .style-inline

        .box-image
            overflow hidden
            width 100%

            img
                display block
                height 150px

        .border
            height 5px
            background $green

        .box-footer
            font-family $roboto
            text-align left
            padding 2%

            h2
                font-size 1.4em
                font-weight 200
                height 38px
                
                strong
                    font-weight 400
            
            h3
                font-size 1.1em
                font-weight 200

    /* End module .wrapper (Card) */

/* End module section#content */